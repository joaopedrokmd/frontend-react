    <script>
        // TODO: complete a função "obterContagemVotantes"
        function obterContagemVotantes(idades) {
    return idades.filter(function(idade) {
        return idade >= 18;
    }).length;
}                       
        const cidade = document.querySelector("#cidade-selecionada");
        const contagem = document.querySelector("#contagem");
        const nomeCidade = document.querySelector("#nome-cidade");

        cidade.addEventListener("change", () => {
            if (!cidade.value) {
                return false;
            }
            fetch(`https://jsdemo-3f387-default-rtdb.europe-west1.firebasedatabase.app/city-stats/${cidade.value}.json`)
                .then(response => response.json())
                .then(data => {
                    console.log(data);
                    nomeCidade.textContent = cidade.options[cidade.selectedIndex].textContent;
                    contagem.textContent = obterContagemVotantes(data);
                });
        });
    </script>
