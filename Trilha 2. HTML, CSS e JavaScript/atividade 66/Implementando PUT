class EmpacotadorBusca {
    constructor(baseURL) {
        this.baseURL = baseURL;
    }

    get(endpoint) {
        return fetch(this.baseURL + endpoint)
            .then(resposta => resposta.json());
    }

    put(endpoint, body) {
        return fetch(this.baseURL + endpoint, {
            method: "put",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify(body)
        }).then(resposta => resposta.json());
    }
}
