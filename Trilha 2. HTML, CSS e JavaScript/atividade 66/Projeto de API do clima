    </footer>
    <script>
        class EmpacotadorBusca {
            constructor(baseURL) {
                this.baseURL = baseURL;
            }

            get(endpoint) {
                return fetch(this.baseURL + endpoint)
                    .then(response => response.json());
            }
        }

        const obterTemperatura = city => {
    const API = new EmpacotadorBusca(
        "https://jsdemo-3f387-default-rtdb.europe-west1.firebasedatabase.app"
    );

    API.get(`/weatherstack/${city}.json`).then(data => {
        document.querySelector("#city").textContent = city;
        mostreTemperatura(data.current.temperature);
    });
};

        const result = document.querySelector("#result");
        const mostreTemperatura = temperature => {
            result.textContent = `A temperatura é ${temperature} graus Celsius.`;
        }

        const citiesDropdown = document.querySelector("#cities-dropdown");

        citiesDropdown.addEventListener("change", () => {
            if (citiesDropdown.value) {
                obterTemperatura(citiesDropdown.value);
            }
        });
    </script>
  </body>
