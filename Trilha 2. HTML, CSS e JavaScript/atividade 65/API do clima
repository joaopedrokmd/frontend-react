    </footer>
    <script>
       const obterClima = cidade => {
    fetch(
        `https://jsdemo-3f387-default-rtdb.europe-west1.firebasedatabase.app/weatherstack/${cidade}.json`
    )
        .then(resposta => resposta.json())
        .then(dados => {
            mostrarTemperatura(dados.current.temperature);
        });
}

        const listaSuspensaDeCidades = document.querySelector("#lista-suspensa-cidades")

        listaSuspensaDeCidades.addEventListener("change",()=>{
          if(listaSuspensaDeCidades.value) {
            obterClima(listaSuspensaDeCidades.value);
          }
        });

        const resultado = document.querySelector("#resultado");
        const mostrarTemperatura = temperatura => {
          resultado.textContent = `Está ${temperatura} graus Celsius.`;
        }   
    </script>
  </body>
