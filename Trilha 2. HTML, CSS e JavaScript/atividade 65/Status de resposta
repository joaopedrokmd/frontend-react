const checaPorNovasNotificacoes = () => {
    return fetch(
        "https://jsdemo-3f387-default-rtdb.europe-west1.firebasedatabase.app/notifications/new.json"
    )
        .then(resposta => resposta.json())
        .then(count => {
            mostreNovasNotificacoes(count);
        })
        .catch(error => {
            console.error(error);
        });
}

function mostreNovasNotificacoes(count) {
    console.log(`Você tem ${count} novas notificações. Gostaria de ler?`);
}

checaPorNovasNotificacoes();
