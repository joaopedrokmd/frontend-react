class Pagamento {
    constructor(valor) {
        this.valor = valor; // chama o setter
    }

    set valor(valor) {
        this._centavos = Math.round(valor * 100);
    }

    get valor() {
        return this._centavos;
    }
}

const pagamento = new Pagamento(10); // 10 dólares
console.log(pagamento.valor); // 1000 (valor em centavos)

// aplicar desconto
pagamento.valor = 7; // 7 dólares
console.log(pagamento.valor); // 700 (valor em centavos)
