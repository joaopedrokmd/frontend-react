const buscaSimulada = (endpoint) => {
    return new Promise((resolve, reject) => {
        if (endpoint !== "voo-status") {
            reject("Ponto de extremidade inválido. Somente o status do voo é suportado.");
        }

        const min = 1;
        const max = 2;
        const rand = Math.floor(Math.random() * (max - min + 1)) + min;

        const dadosParaResolver = {
            decolou: false,
            atraso: true
        };

        setTimeout(() => {
            resolve(dadosParaResolver);
        }, rand * 1000);
    });
};

const logStatusVoo = () => {
    buscaSimulada("voo-status")
        .then(dados => {
            console.log(dados);
        })
        .catch(erro => {
            console.error(erro);
        });
};

// Não altere
logStatusVoo();
