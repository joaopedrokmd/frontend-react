const buscaSimulada = (endpoint) => {
    return new Promise((resolve, reject) => {
        if (endpoint !== "status-voo") {
            reject("Endpoint invÃ¡lido. Apenas status-voo tem suporte.")
        }

        const min = 1;
        const max = 2;
        const rand = Math.floor(Math.random() * (max - min + 1)) + min;

        const dadosParaResolver = {
            partiu: false,
            atraso: true
        };

        setTimeout(() => {
            resolve(dadosParaResolver);
        }, rand * 1000);
    });
};

const logDetalhesUsuario = () => {
    buscaSimulada("detalhes-usuario")
        .catch(error => {
            console.error(error);
        });
};

logDetalhesUsuario();
