  <body>
    <nav class="navbar">
      <h1 class="nav-brand">Tabela Nutricional</h1>
    </nav>

    <main class="container">
      <table id="tabela-nutricional">
        <thead>
          <tr>
            <th>Nutrição</th>
            <th>Valor</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </main>

    <script>
      // Implementação correta da função
      function renderizarLinhaTabela(rotulo, valor) {
        return `
<tr>
  <td>${rotulo}</td>
  <td>${valor}</td>
</tr>
`;
      }

      let htmlParaCarboidratos = renderizarLinhaTabela("Carboidratos", "17g");
      let htmlParaProteina = renderizarLinhaTabela("Proteina", "19g");
      let htmlParaGordura = renderizarLinhaTabela("Gordura", "5g");

      const tbody = document.querySelector("#tabela-nutricional tbody");
      tbody.insertAdjacentHTML("beforeend", htmlParaCarboidratos);
      tbody.insertAdjacentHTML("beforeend", htmlParaProteina);
      tbody.insertAdjacentHTML("beforeend", htmlParaGordura);
    </script>
  </body>
</html>
