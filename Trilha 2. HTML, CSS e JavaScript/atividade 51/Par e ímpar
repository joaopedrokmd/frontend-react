  <body>
    <nav class="navbar">
        <h1 class="nav-marca">Resto da divisão</h1>
    </nav>

    <main class="container">
        <div>
            <label class="label" for="componente-nome">Digite um número</label>
            <input type="number" class="input" placeholder="Entre número" id="teu-numero" autocomplete="off">
        </div>

        <p>Par ou ímpar? <strong id="output"></strong>.</p>
    </main>
    <script>
        function parOuImpar(numero) {
    if (numero % 2 === 0) {
        return "par";
    }
    return "ímpar";
}
             
        const numero = document.querySelector("#teu-numero");
        const output = document.querySelector("#output");

        numero.addEventListener("keyup", () => {
            output.textContent = parOuImpar(Number.parseInt(numero.value, 10));
        });
    </script>
  </body>
