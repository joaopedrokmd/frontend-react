  <body>
    <nav class="navbar">
        <h1 class="nav-brand">Sua idade ano que vem</h1>
    </nav>

    <main class="container">
        <div>
            <label class="label" for="componente-idade">Entre idade</label>
            <input type="number" class="input" placeholder="Entre idade" id="tua-idade" min="0" max="130" autocomplete="off">
        </div>

        <p>No próximo ano, você terá <span id="prox-idade"></span> anos.</p>
    </main>
    <script>

       function obterProximaIdade(idade) {
    if (idade === "") {
        return 0;
    }

    return Number.parseInt(idade, 10) + 1;
}
         
        const idade = document.querySelector("#tua-idade");
        const proxIdade = document.querySelector("#prox-idade");

        idade.addEventListener("keyup", () => {
            proxIdade.textContent = obterProximaIdade(idade.value);
        });
    </script>
  </body>
</html>