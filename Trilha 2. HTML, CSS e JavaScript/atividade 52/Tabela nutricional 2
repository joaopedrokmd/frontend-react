    <script>
        // TODO: crie a função "renderizarTabelaLinhas"
       function renderizarTabelaLinhas(linhas) {
    let html = "";

    linhas.forEach(function(linha) {
        const rotulo = linha[0];
        const valor = linha[1];

        html += `
<tr>
    <td>${rotulo}</td>
    <td>${valor}</td>
</tr>`;
    });

    return html;
}

                
        const data = [["Carbohidratos", "17g"], ["Proteinas", "19g"], ["Gorduras", "5g"]];

        const html = renderizarTabelaLinhas(data);

        const tbody = document.querySelector("#tabela-nutricao tbody");
        tbody.insertAdjacentHTML("beforeend", html);
    </script>
  </body>
</html>