function adicionarNota(notas, nota) {
  notas.push(nota);        // adiciona uma nova nota ao final do array
  return notas;            // retorna a matriz atualizada
}

function obterTotalDeNotas(notas) {
  return notas.length;     // retorna o número total de notas
}

function obterPrimeiraNota(notas) {
  return notas[0];         // primeira nota (posição 0)
}

function obterUltimaNota(notas) {
  return notas[notas.length - 1];  // última nota (última posição)
}

function obterSomaDasNotas(notas) {
  return notas.reduce((total, atual) => total + atual, 0); // soma com reduce
}

function obterMediaDasNotas(notas) {
  if (notas.length === 0) return 0;                        // evita divisão por zero
  return obterSomaDasNotas(notas) / notas.length;          // soma ÷ quantidade
}

function obterNotasAumentadasEm2(notas) {
  return notas.map(nota => nota + 2);                      // cria novo array com +2
}
